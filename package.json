{
  "name": "slide_bun",
  "version": "0.0.1",
  "private": false,
  "description": "zero-Config Slide Generator - Write Markdown, get beautiful slides automatically",
  "keywords": [
    "auto-layout",
    "bun",
    "markdown",
    "presentation",
    "slides",
    "typescript",
    "zero-config"
  ],
  "homepage": "https://github.com/halqme/slide-bun#readme",
  "bugs": {
    "url": "https://github.com/halqme/slide_bun/issues"
  },
  "license": "MIT",
  "author": "HALQME",
  "repository": {
    "type": "git",
    "url": "https://github.com/halqme/slide_bun"
  },
  "bin": "dist/cli.js",
  "type": "module",
  "module": "src/index.ts",
  "scripts": {
    "start": "bun run build && bun run dist/cli.js",
    "build": "bun build src/cli.ts --outdir=./dist --target=bun --sourcemap",
    "test": "bun test",
    "check": "bun run format && bun run lint && bun run type-check",
    "type-check": "bunx tsc --noEmit",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "format": "oxfmt",
    "format:check": "oxfmt --check"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "marked": "^17.0.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/marked": "^6.0.0",
    "oxfmt": "^0.32.0",
    "oxlint": "^1.47.0"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "engines": {
    "bun": "1.3.8"
  },
  "packageManager": "bun@1.3.8"
}
